<?xml version="1.0"?>
<psalm
    totallyTyped="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config ./vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <directory name="Tests" />
        <directory name="PHPStan" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <NoInterfaceProperties>
            <errorLevel type="suppress">
                <referencedClass
                    name="SignpostMarv\DaftMagicPropertyAnalysis\Tests\DaftMagicPropertyAnalysis\Fixtures\ucwordsPrefixedTypeInterface"
                />
            </errorLevel>
        </NoInterfaceProperties>
    </issueHandlers>
    <plugins>
        <plugin filename="./Psalm/Plugin.php" />
    </plugins>
</psalm>
